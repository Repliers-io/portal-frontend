{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
    "types": [
      "jest",
      "node",
      "react",
      "react-dom",
      "next",
      "mdx"
    ],
    "paths": {
      "@defaults/*": [
        "./configs/defaults/*"
      ],
      "@icons/*": [
        "./assets/icons/defaults/*"
      ],
      "@configs/*": [
        "./configs/defaults/*"
      ],
      "@content/*": [
        "./content/defaults/*"
      ],
      "@templates": [
        "./components/templates"
      ],
      "@templates/*": [
        "./components/templates/components/*"
      ],
      "@pages/*": [
        "./components/pages/*"
      ],
      "@shared/*": [
        "./components/shared/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    "**/*.md",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}